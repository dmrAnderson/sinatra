<h2>ğŸ  Dashboard</h2>
<% if authorized?(Post, :create) %>
  <a href="/posts/new">ğŸ“ New Post</a>
<% else %>
  <a href="javascript:void(0)"><s title="You don't have permission to view posts">ğŸ“ New Post</s></a>
<% end %>
<% if @posts.empty? %>
  <p>No posts available.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><strong><%= post.title %></strong></td>
          <td><i><%= post.content %></i></td>
          <td>
            <% if authorized?(Post, :update) %>
              <a href="/posts/<%= post.id %>/edit">âœï¸ Edit post</a>
            <% else %>
              <a href="javascript:void(0)"><s title="You don't have permission to view posts">âœï¸ Edit post</s></a>
            <% end %>
            <% if authorized?(Post, :delete) %>
              <form action="/posts/<%= post.id %>" method="post" style="display:inline;">
                <input type="hidden" name="_method" value="delete">
                <button type="submit">ğŸ—‘ï¸ Delete</button>
              </form>
            <% else %>
              <form action="javascript:void(0)" style="display:inline;">
                <input type="hidden" name="_method" value="delete">
                <button type="submit" disabled title="You don't have permission to view posts">ğŸ—‘ï¸ Delete</button>
              </form>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
